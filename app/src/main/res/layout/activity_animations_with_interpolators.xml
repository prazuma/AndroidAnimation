<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnimationsWithInterpolatorActivity">

    <ImageView
        android:id="@+id/activity_animate_with_interpolator_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_android_pink_24dp" />

    <Button
        android:id="@+id/activity_animate_without_interpolator_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NO Accelerate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/activity_animate_with_interpolator_button"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/activity_animate_with_interpolator_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accelerate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/activity_animate_without_interpolator_button" />

</androidx.constraintlayout.widget.ConstraintLayout>